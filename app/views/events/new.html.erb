<%= simple_form_for(@event) do |f| %>
  <%= f.association :gym, label: 'Lieu' %>
  <%= f.input :start_time, label: 'Début' %>
  <%= f.input :end_time, label: 'Fin' %>
  <%= f.input :slots, label: 'Nombre de places' %>
  <%= f.input :musculation %>
  <%= f.input :cardio%>
  <%= f.input :fitness %>
  <%= f.input :same_level, label: 'Même niveau ?' %>
  <%= f.input :description %>

  <%= f.submit %>
<% end %>
